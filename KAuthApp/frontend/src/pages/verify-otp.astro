---
import Layout from "../layouts/Layout.astro";
import { OtpForm } from "../components/Auth/OtpForm";

const url = new URL(Astro.request.url);
const email = url.searchParams.get("email") || "";

if (!email) {
  return Astro.redirect("/sign-up");
}
---

<Layout
  title="Verify OTP - KAuth"
  description="Verify your email address"
>
  <main class="min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
      <div class="hidden lg:flex items-center justify-center order-2 lg:order-1">
        <div class="relative w-full h-[600px] flex items-center justify-center">
          <div class="absolute inset-0 bg-gradient-to-r from-lime-400/20 to-lime-600/20 rounded-3xl blur-3xl"></div>
          <div class="relative z-10 text-center space-y-6">
            <div class="w-32 h-32 mx-auto bg-lime-400/10 rounded-full flex items-center justify-center mb-8 animate-pulse">
              <svg class="w-16 h-16 text-lime-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h2 class="text-5xl font-bold text-white">Almost There!</h2>
            <p class="text-xl text-gray-300 max-w-md">
              Just one more step to secure your account
            </p>
            <div class="pt-8 space-y-4">
              <div class="flex items-center gap-4 p-4 bg-lime-400/5 rounded-xl border border-lime-400/20 max-w-md mx-auto">
                <div class="w-10 h-10 rounded-full bg-lime-400 flex items-center justify-center text-gray-900 font-bold">1</div>
                <div class="text-left">
                  <div class="text-white font-medium">Check your email</div>
                  <div class="text-sm text-gray-400">We sent a 6-digit code</div>
                </div>
              </div>
              <div class="flex items-center gap-4 p-4 bg-lime-400/5 rounded-xl border border-lime-400/20 max-w-md mx-auto">
                <div class="w-10 h-10 rounded-full bg-lime-400 flex items-center justify-center text-gray-900 font-bold">2</div>
                <div class="text-left">
                  <div class="text-white font-medium">Enter the code</div>
                  <div class="text-sm text-gray-400">Type it in the boxes</div>
                </div>
              </div>
              <div class="flex items-center gap-4 p-4 bg-gray-700/30 rounded-xl border border-gray-600/50 max-w-md mx-auto">
                <div class="w-10 h-10 rounded-full bg-gray-600 flex items-center justify-center text-gray-400 font-bold">3</div>
                <div class="text-left">
                  <div class="text-gray-400 font-medium">You're all set!</div>
                  <div class="text-sm text-gray-500">Start using your account</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="order-1 lg:order-2">
        <OtpForm client:load email={email} />
      </div>
    </div>
  </main>
</Layout>
