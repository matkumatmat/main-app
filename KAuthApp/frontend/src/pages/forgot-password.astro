---
import Layout from "../layouts/Layout.astro";
import { ForgotPasswordForm } from "../components/Auth/ForgotPasswordForm";
---

<Layout
  title="Forgot Password - KAuth"
  description="Reset your password"
>
  <main class="min-h-screen flex items-center justify-center p-2 sm:p-4 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-lime-500/5 via-transparent to-lime-600/5"></div>

    <div class="w-full max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-8 items-center relative z-10 py-4 sm:py-0">
      <section class="hidden lg:flex items-center justify-center" aria-label="Security information">
        <article class="relative w-full min-h-[600px] flex items-center justify-center py-8">
          <div class="absolute inset-0 bg-gradient-to-r from-lime-400/20 to-lime-600/20 rounded-3xl blur-3xl"></div>

          <div class="relative z-10 text-center space-y-8 px-4">
            <header>
              <h1 class="text-5xl font-bold text-white mb-4">Secure Reset</h1>
              <p class="text-xl text-gray-300 max-w-lg mx-auto">
                We'll send you a secure link to reset your password
              </p>
            </header>

            <section class="space-y-6 pt-8" aria-label="Security features">
              <article class="p-6 bg-white/5 backdrop-blur-md rounded-xl border border-white/10 hover:bg-white/10 transition-all duration-300 text-left">
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 shrink-0 bg-lime-400/10 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-lime-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-white mb-1">Secure Link</h3>
                    <p class="text-sm text-gray-400">One-time use reset link sent to your email</p>
                  </div>
                </div>
              </article>

              <article class="p-6 bg-white/5 backdrop-blur-md rounded-xl border border-white/10 hover:bg-white/10 transition-all duration-300 text-left">
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 shrink-0 bg-lime-400/10 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-lime-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-white mb-1">Expires in 15 Minutes</h3>
                    <p class="text-sm text-gray-400">Reset link is valid for a short time for security</p>
                  </div>
                </div>
              </article>

              <article class="p-6 bg-white/5 backdrop-blur-md rounded-xl border border-white/10 hover:bg-white/10 transition-all duration-300 text-left">
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 shrink-0 bg-lime-400/10 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-lime-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-white mb-1">Email Verification</h3>
                    <p class="text-sm text-gray-400">Link only works with your registered email</p>
                  </div>
                </div>
              </article>
            </section>
          </div>
        </article>
      </section>

      <section aria-label="Password reset form">
        <ForgotPasswordForm client:load />
      </section>
    </div>
  </main>
</Layout>
