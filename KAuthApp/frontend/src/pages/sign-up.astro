---
import Layout from "../layouts/Layout.astro";
import { SignUpForm } from "../components/Auth/SignUpForm";
---

<Layout
  title="Sign Up - KAuth"
  description="Create your account"
>
  <main class="min-h-screen flex items-center justify-center p-2 sm:p-4 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-lime-500/5 via-transparent to-lime-600/5"></div>

    <div class="w-full max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-8 items-center relative z-10 py-4 sm:py-0">
      <section class="hidden lg:flex items-center justify-center" aria-label="Platform features">
        <article class="relative w-full min-h-[600px] flex items-center justify-center py-8">
          <div class="absolute inset-0 bg-gradient-to-r from-lime-400/20 to-lime-600/20 rounded-3xl blur-3xl"></div>

          <div class="relative z-10 text-center space-y-8 px-4">
            <header>
              <h1 class="text-5xl font-bold text-white mb-4">Start Your Journey</h1>
              <p class="text-xl text-gray-300 max-w-lg mx-auto">
                Join thousands of users who trust us with their authentication
              </p>
            </header>

            <section class="grid grid-cols-2 gap-6 pt-4 max-w-xl mx-auto" aria-label="Platform statistics">
              <article class="p-5 bg-white/5 backdrop-blur-md rounded-xl border border-white/10 hover:bg-white/10 transition-all duration-300">
                <data value="99.9" class="text-3xl font-bold text-lime-400 mb-2 block">99.9%</data>
                <p class="text-sm text-gray-400">Uptime</p>
              </article>

              <article class="p-5 bg-white/5 backdrop-blur-md rounded-xl border border-white/10 hover:bg-white/10 transition-all duration-300">
                <data value="50000" class="text-3xl font-bold text-lime-400 mb-2 block">50K+</data>
                <p class="text-sm text-gray-400">Users</p>
              </article>

              <article class="p-5 bg-white/5 backdrop-blur-md rounded-xl border border-white/10 hover:bg-white/10 transition-all duration-300">
                <data value="24/7" class="text-3xl font-bold text-lime-400 mb-2 block">24/7</data>
                <p class="text-sm text-gray-400">Support</p>
              </article>

              <article class="p-5 bg-white/5 backdrop-blur-md rounded-xl border border-white/10 hover:bg-white/10 transition-all duration-300">
                <data value="256" class="text-3xl font-bold text-lime-400 mb-2 block">Secure</data>
                <p class="text-sm text-gray-400">256-bit</p>
              </article>
            </section>
          </div>
        </article>
      </section>

      <section aria-label="Sign up form">
        <SignUpForm client:load />
      </section>
    </div>
  </main>
</Layout>
